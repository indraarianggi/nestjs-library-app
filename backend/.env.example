# Application
NODE_ENV=development
PORT=3000

# Database
DATABASE_URL=postgresql://library_user:library_password@localhost:5432/library_db

# Frontend
FRONTEND_URL=http://localhost:5173

# JWT Authentication Configuration
JWT_ACCESS_SECRET=your-access-secret-key-min-256-bits-change-in-production
JWT_REFRESH_SECRET=your-refresh-secret-key-min-256-bits-change-in-production
JWT_ACCESS_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# Sentry (Error Tracking)
SENTRY_DSN=

# SMTP Configuration (Email)
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=2525
SMTP_USER=
SMTP_PASS=
SMTP_FROM_EMAIL=admin-library@mail.com
